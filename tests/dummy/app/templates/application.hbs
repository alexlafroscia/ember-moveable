<div class="flex flex-col items-center w-screen h-screen m-2" {{did-insert (set this.containerElement)}}>
  <h1
    class="p-2 mt-12 font-mono text-2xl "
    {{moveable
      container=this.containerElement
      draggable=true
      resizable=true
      onResize=this.handleResize
      onDrag=this.handleDrag
    }}
  >
    ember-moveable
  </h1>

  <p
    class="p-2 mt-4 text-lg"
    {{moveable
      container=this.containerElement
      draggable=true
      resizable=true
      onResize=this.handleResize
      onDrag=this.handleDrag
    }}
  >
    An Ember modifier for <a class="inline-block px-1 font-mono tracking-wide text-blue-400 bg-gray-200 rounded-sm" href="https://github.com/daybrush/moveable">moveable</a>
  </p>
</div>